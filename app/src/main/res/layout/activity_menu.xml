<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939"
    tools:context=".Menu">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#613737"
        android:fontFamily="sans-serif-black"
        android:hint="@string/InicioNombre"
        android:includeFontPadding="false"
        android:textColor="#FF0000"
        android:textColorHint="#FF8C00"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="305dp"
        android:layout_height="335dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btNueva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7C2828"
            android:onClick="Nueva"
            android:text="@string/nueva_alarma"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7C2828"
            android:onClick="Config"
            android:text="@string/configurar_alarmizator"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7C2828"
            android:onClick="Historial"
            android:text="@string/historial_de_alarmas"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>